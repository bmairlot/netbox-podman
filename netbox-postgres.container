[Unit]
Description=Postgresql container

[Container]
ContainerName=netbox-postgres
Image=docker.io/postgres:17-alpine
EnvironmentFile=env/postgres.env
Volume=netbox-postgres-data:/var/lib/postgresql/data
HealthCmd=pg_isready -q -t 2 -d $POSTGRES_DB -U $POSTGRES_USER
HealthStartPeriod=20s
HealthTimeout=30s
HealthStartupInterval=10s
HealthStartupRetries=5
Notify=healthy
DNS=172.16.0.1
Pod=netbox.pod

[Install]
WantedBy=multi-user.target
